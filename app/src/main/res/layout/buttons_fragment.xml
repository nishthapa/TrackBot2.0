<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_butt"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:visibility="gone"
        android:background="@drawable/left_button"/>

    <ListView
        android:id="@+id/devices_butt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" >
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_butt"
        android:layout_marginTop="140dp"
        android:layout_marginStart="160dp"
        android:visibility="gone"
        android:background="@drawable/right_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forward_butt"
        android:layout_marginTop="10dp"
        android:layout_marginStart="495dp"
        android:visibility="gone"
        android:background="@drawable/up_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reverse_butt"
        android:layout_marginTop="150dp"
        android:layout_marginStart="495dp"
        android:visibility="gone"
        android:background="@drawable/down_button"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sel_device_butt"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bluetooth_icon"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        android:id="@+id/disconnect_butt"
        android:layout_marginTop="55dp"
        android:layout_marginStart="13dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DEBUG"
        android:id="@+id/debug"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select Device"
        android:id="@+id/sel_device_button_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"/>

</RelativeLayout>
